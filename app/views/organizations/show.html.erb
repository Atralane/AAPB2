<div class="page-header">
  <h1>Participating Organizations</h1>
</div>

<div class="jumbotron org-o-tron">
  <h1><%= @org.short_name %></h1>
  <% if @org.logo_src %>
      <img src="<%= @org.logo_src %>" alt="<%= @org.short_name %> logo" class="org-logo"/>
    <% end %>
  <p><%= @org.city %>, <%= @org.state %></p>
  <p><a href="<%= @org.url %>"><%= @org.url %></a></p>
</div>

<div class="row">

  <!-- START: Main Column -->
  <div class="col-md-8 col-md-push-4">

    <div class="well well-sm">
      <a class="btn btn-default" role="button" href="/catalog?f[organization][]=<%= CGI::escape(@org.short_name)%>" title="View All Records for <%= @org.short_name %>">View All Records</a>
    </div>

    <% if @org.history_html %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">History</h2>
        </div>
        <div class="panel-body">
          <%= @org.history_html.html_safe %>
        </div>
      </div>
    <% end %>

    <% if @org.productions_html %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Productions</h2>
        </div>
        <div class="panel-body">
          <%= @org.productions_html.html_safe %>
        </div>
      </div>
    <% end %>


  </div>
  <!-- END: Main Column -->

  <div class="col-md-4 col-md-pull-8 column">

    <!-- Column Search -->
      <div class="panel panel-info naked-panel" id="column-search">
        <div class="panel-heading">
          <h3 class="panel-title">Search the AAPB</h3>
        </div>
        <div class="panel-body">
          <%= render_search_bar  %>
        </div>
      </div>
      <!-- END: Column Search -->

  </div>

</div>
