<%
# Ensure items fill an array that is a multiple of 3,
# because the carousel is 3 across. Otherwise, you have
# empty items in the carousel.
items = Exhibit.all_top_level
items = items * 3 unless items.length % 3 == 0
%>


<%= 
    render layout: 'home/carousel', 
           locals: {
                    id: 'exhibits-carousel', 
                    items: items,
                    view_all: 'View All Exhibits',
                    view_all_href: '/exhibits'
                   } do |item| %>
  <a href="<%= "/exhibits/#{item.path}" %>" class="list-group-item" >
    <img src="<%= item.thumbnail_url %>" title="<%= item.title %>" alt="<%= item.title %>" />
    <span class="carousel-caption">
      <h3 class="list-group-item-heading"><%= item.title %></h3>
    </span>
  </a>
<% end %>