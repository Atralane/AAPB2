<!-- THis is the Feature Carousel for the homepage -->

<div id="featured-carousel" class="carousel slide featured-carousel" data-ride="carousel">

  <div class="carousel-inner" role="listbox">

    <% Featured.from_gallery(gallery).shuffle.each_slice(3).each_with_index do |items, index| %>

      <div class="item <%= 'active' if index == 0%>">

        <!-- Panel - Welcome Text Blocks -->
        <div class="panel panel-default naked-panel">
          <div class="panel-body">

            <div class="list-group">
              <% items.each do |item| %>

                <a href="<%= "/catalog/#{item.id}" %>" class="list-group-item" >

                  <img src="<%= item.thumbnail_url %>" title="<%= item.name %>" alt="<%= item.name %>" />

                  <span class="carousel-caption">
                    <h3 class="list-group-item-heading"><%= item.name %></h3>
                    <p class="list-group-item-text"><%= item.org_name %></p>
                  </span>

                </a>
              <% end %>
            </div>

          </div>
        </div>

      </div>

    <% end %>

  </div>
  <a class="left carousel-control" href="#featured-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#featured-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<!-- END Feature Carousel for the homepage -->