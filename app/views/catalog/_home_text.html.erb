<!-- Panel - Search -->
<div class="panel panel-default search-panel naked-panel" id="catalog-search">
  <div class="panel-body">


    <%= form_tag '/advanced', 
      method: :get, 
      class: 'search-query-form clearfix' do %>

      <div class="form-group">
        <label for="all">All these words</label>
        <input class="form-control input-group input-group-lg" name="all"/>
      </div>

      <div class="form-group">
        <label for="title">This title</label>
        <input class="form-control input-group input-group-lg" name="title"/>
      </div>

      <div class="form-group">
        <label for="exact">This exact word or phrase</label>
        <input class="form-control input-group input-group-lg" name="exact"/>
      </div>

      <div class="form-group">
        <label for="any">Any of these words</label>
        <input class="form-control input-group input-group-lg" name="any"/>
      </div>

      <div class="form-group">
        <label for="none">None of these words</label>
        <input class="form-control input-group input-group-lg" name="none"/>
      </div>

      <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Search"/>
      </div>
    <% end %>


  </div>
</div>

<!-- Panel -->
<%= render partial: 'shared/featured_carousel', locals: { gallery: 'search' } %>