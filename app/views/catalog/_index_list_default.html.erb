<% PBCore.new(document.instance_variable_get('@_source')['xml']).tap do |pbcore| %>

  <% # header bar for doc items in index view -%>
  <div class="documentHeader media"><!-- Document Header -->

    <div class="panel panel-default media-panel">
      <div class="panel-heading">
        <h2 class="panel-title" title="<%= pbcore.title %>">
          <%= link_to_document(document, pbcore.title) %>
        </h2>
      </div>
      <div class="panel-body">
        
        <!-- Start Grid -->
        <div class="row">

          <!-- START Column -->
          <div class="col-md-3">

            <!-- This should link to the record -->

            <img src="<%= pbcore.img_src %>" class="media-object" alt="thumbnail of <%= pbcore.title %>" title="thumbnail of <%= pbcore.title %>" />
            
          </div>
          <!-- END Column -->

          <!-- START Column -->
          <div class="col-md-9">

            <% pbcore.descriptions.each do |description| %>
              <p><%= description %></p>
            <% end %>

            <% pbcore.titles.each do |type,title| %>
              <dl class="clearfix">
                <dt><%= type %></dt>
                <dd><%= title %></dd>
              </dl>
            <% end %>

            <% pbcore.asset_dates.each do |type,date| %>
              <dl class="clearfix">
                <dt><%= type %></dt>
                <dd><%= date %></dd>
              </dl>
            <% end %>

          </div>
          <!-- END Column -->
        </div>
          <!-- END Grid -->
      </div><!-- END Panel Body -->
    </div><!-- END Panel -->


    <% # bookmark functions for items/docs -%>
    <%#= render_index_doc_actions document, :wrapping_class => "index-document-functions" %>

  </div><!-- END Document Header -->

<% end %>
